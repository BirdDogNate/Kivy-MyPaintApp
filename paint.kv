#:kivy 1.0.9

# Left side toolbar
<ColorGrid>:
    cols: 2
    padding: 3, 3, 3, 3
    spacing: 3, 3

<SideBar@BoxLayout>:
    canvas.before:
        Color:
            rgba: .96, .96, .86, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"

    ColorGrid:
    Button:
        text: "Clear"
        size_hint: None, None
        height: self.width
        on_release: root.parent.mpw.canvas.clear()

# Drawing Area
<MyPaintWidget>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Main>:
    mpw: mpw
    SideBar:
        size_hint: None, 1
        width: 100

    MyPaintWidget:
        id: mpw
        size_hint: None, 1
        width: root.width - 100
        pos: 100, 0
